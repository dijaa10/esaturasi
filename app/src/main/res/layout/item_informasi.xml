<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".Fragment.InformasiFragment">

    <!-- CardView untuk setiap item -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <!-- Konten di dalam CardView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Judul Pengumuman -->
            <TextView
                android:id="@+id/judul_pengumuman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Judul Pengumuman"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000" />

            <!-- Tanggal Pengumuman -->
            <TextView
                android:id="@+id/tgl_pengumuman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanggal: 2024-11-14"
                android:textSize="14sp"
                android:textColor="#555"
                android:layout_marginTop="4dp" />

            <!-- Deskripsi Pengumuman -->
            <TextView
                android:id="@+id/deskripsi_pengumuman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi pengumuman akan muncul di sini."
                android:textSize="16sp"
                android:textColor="#333"
                android:layout_marginTop="8dp" />

            <!-- Gambar Pengumuman -->
            <ImageView
                android:id="@+id/file_pengumuman"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
