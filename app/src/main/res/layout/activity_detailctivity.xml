<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Header dengan ikon kembali -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/blue">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Back"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <!-- Konten Artikel dalam ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="16dp"
            android:elevation="2dp">

            <!-- Gambar Artikel -->
            <ImageView
                android:id="@+id/article_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_sample1" />

            <!-- Kategori Artikel -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Informasi"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Judul Artikel -->
            <TextView
                android:id="@+id/article_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Meriah dan Penuh Haru, Wisuda Siswa SMK Negeri 1 Sumberasih Tahun Ini Menjadi Momen Tak Terlupakan"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Tanggal Artikel -->
            <TextView
                android:id="@+id/article_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Kamis, 20 Oktober 2025"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <!-- Isi Artikel -->
            <TextView
                android:id="@+id/article_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Pada hari yang ditunggu-tunggu, acara wisuda siswa SMK Negeri 1 Sumberasih berlangsung dengan penuh kemeriahan dan haru. Kegiatan yang dilaksanakan di [lokasi wisuda] ini dihadiri oleh para siswa, orang tua, guru, serta tamu undangan, menjadikan hari tersebut sebagai momen istimewa bagi semua yang hadir.\n\nAcara dimulai dengan sambutan hangat dari Kepala Sekolah, yang mengapresiasi kerja keras para siswa selama menempuh pendidikan. Dalam sambutannya, beliau menyampaikan rasa bangga atas pencapaian siswa, baik dalam bidang akademik maupun non-akademik.\n\nKenangan Manis Bersama\n\nSetelah upacara wisuda diwarnai oleh Dwi Yulianti, mengenang kenangan panjang bersama."
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
